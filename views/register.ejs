<%- include ('partials/header') %>

<div id="titlebar" class="gradient">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Register</h2>
                <nav id="breadcrumbs" class="dark">
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li>Register</li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xl-5 offset-xl-3">
            <div class="login-register-page">
                <div class="welcome-text">
                    <h3 style="font-size: 26px;">Let's create your account!</h3>
                    <span>Already have an account? <a href="/login">Login!</a></span>
                </div>

                <% if (typeof query.error !== "undefined"){ %>
                    <div class="notification error closable">
                        <% if (query.error == "mismatch"){ %>
                            Password does not mismatch
                        <% } %>

                        <% if (query.error == "exists"){ %>
                            Email already exists.
                        <% } %>
                    </div>
                <% } %>


                <form action="/register" method="post">
                    <div class="input-with-icon-left">
                        <i class="icon-material-baseline-mail-outline"></i>
                        <input type="text" name="name" id="" class="input-text with-border" placeholder="Name" required />
                    </div>
                    <div class="input-with-icon-left">
                        <i class="icon-material-baseline-mail-outline"></i>
                        <input type="text" name="email" id="" class="input-text with-border" placeholder="Email Address" required />
                    </div>

                    <div class="input-with-icon-left" data-tippy-placement="bottom">
                        <i class="icon-material-outline-lock"></i>
                        <input type="password" name="password" id="" class="input-text with-border" placeholder="Enter Password" required />
                    </div>

                    <div class="input-with-icon-left" data-tippy-placement="bottom">
                        <i class="icon-material-outline-lock"></i>
                        <input type="password" name="confirm_password" id="" class="input-text with-border" placeholder="Confirm Password" required />
                    </div>

                    <button type="submit" class="button full-width button-sliding-icon ripple-effect margin-top-10" type="submit">Register <i class="icon-material-outline-arrow-right-alt"></i></button>
                </form>

            </div>
        </div>
    </div>
</div>


<%- include ('partials/footer') %>